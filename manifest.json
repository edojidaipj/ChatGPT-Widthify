{
  "manifest_version": 3,
  "name": "ChatGPT Widthify",
  "version": "1.0.4",
  "description": "画面上に表示されるスライドを操作することによってサイドバーの横幅とテキストが表示されるエリアの横幅を変更することができます。",
  "icons": {
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ]
}
